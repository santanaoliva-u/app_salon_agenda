# =============================================================================
# SALON BOOKING APP - ENVIRONMENT CONFIGURATION
# =============================================================================
# Este archivo contiene todas las configuraciones críticas del proyecto.
# NUNCA commitear este archivo al repositorio - está excluido en .gitignore
# =============================================================================

# =============================================================================
# API KEYS Y SERVICIOS EXTERNOS
# =============================================================================

# Google Maps API Key - Requerida para mapas y geocoding
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Places API Key (opcional, para autocompletado de direcciones)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Analytics (opcional)
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Stripe Payment Gateway (para pagos futuros)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# OneSignal Push Notifications (opcional)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================

# Firestore Configuration
FIRESTORE_PROJECT_ID=your_project_id
FIRESTORE_DATABASE_URL=https://your_project_id.firebaseio.com

# SQLite Local Database (para modo offline)
LOCAL_DB_NAME=salon_booking.db
LOCAL_DB_VERSION=1

# =============================================================================
# ENDPOINTS Y SERVICIOS EXTERNOS
# =============================================================================

# Backend API (si tienes un backend personalizado)
API_BASE_URL=https://api.yourdomain.com
API_VERSION=v1

# Authentication Endpoints
AUTH_LOGIN_ENDPOINT=/auth/login
AUTH_REGISTER_ENDPOINT=/auth/register
AUTH_REFRESH_ENDPOINT=/auth/refresh

# Booking Endpoints
BOOKING_CREATE_ENDPOINT=/bookings
BOOKING_LIST_ENDPOINT=/bookings
BOOKING_UPDATE_ENDPOINT=/bookings/{id}

# Services Endpoints
SERVICES_LIST_ENDPOINT=/services
WORKERS_LIST_ENDPOINT=/workers

# =============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================================================

# App Configuration
APP_NAME=Salon Booking App
APP_VERSION=1.0.0
APP_ENVIRONMENT=development  # development, staging, production

# Feature Flags
FIREBASE_ENABLED=false
OFFLINE_MODE_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=false
PAYMENTS_ENABLED=false
ANALYTICS_ENABLED=false

# UI Configuration
THEME_PRIMARY_COLOR=#721c80
THEME_SECONDARY_COLOR=#196103
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=en,es,fr

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# JWT Configuration (si usas JWT)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION_HOURS=24

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_IV=your_16_character_iv

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert

# =============================================================================
# CONFIGURACIÓN DE LOGGING Y MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info  # debug, info, warning, error
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# Crash Reporting
CRASH_REPORTING_ENABLED=true
CRASH_REPORTING_API_KEY=your_crash_reporting_key

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1

# =============================================================================
# CONFIGURACIÓN DE RED Y CONECTIVIDAD
# =============================================================================

# Network Configuration
NETWORK_TIMEOUT_SECONDS=30
NETWORK_RETRY_ATTEMPTS=3
NETWORK_RETRY_DELAY_SECONDS=2

# Cache Configuration
CACHE_ENABLED=true
CACHE_MAX_SIZE_MB=50
CACHE_EXPIRATION_HOURS=24

# Offline Configuration
OFFLINE_DATA_SYNC_INTERVAL_MINUTES=15
OFFLINE_MAX_RETRY_ATTEMPTS=5

# =============================================================================
# CONFIGURACIÓN DE NOTIFICACIONES
# =============================================================================

# Email Configuration (para notificaciones por email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com

# SMS Configuration (opcional)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# =============================================================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# =============================================================================

# File Storage
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
UPLOAD_PATH=/uploads/

# Image Configuration
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85

# Cloud Storage (Firebase Storage)
STORAGE_BUCKET=your_project.appspot.com
STORAGE_BASE_URL=https://firebasestorage.googleapis.com/v0/b/

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Development Tools
DEBUG_MODE=true
HOT_RELOAD_ENABLED=true
DEV_TOOLS_ENABLED=true

# Mock Data (para desarrollo)
USE_MOCK_DATA=false
MOCK_DATA_DELAY_MS=500

# Test Configuration
TEST_API_BASE_URL=http://localhost:3000
TEST_DATABASE_NAME=test_salon_booking.db

# =============================================================================
# CONFIGURACIÓN POR ENTORNO
# =============================================================================

# Environment-specific overrides
# Estas variables pueden sobrescribir las anteriores según el entorno

# Production overrides
# PROD_API_BASE_URL=https://api-prod.yourdomain.com
# PROD_FIREBASE_PROJECT_ID=your_prod_project_id

# Staging overrides
# STAGING_API_BASE_URL=https://api-staging.yourdomain.com
# STAGING_FIREBASE_PROJECT_ID=your_staging_project_id

# =============================================================================
# CONFIGURACIONES ADICIONALES
# =============================================================================

# Third-party integrations
SOCIAL_LOGIN_ENABLED=true
GOOGLE_SIGN_IN_CLIENT_ID=your_google_client_id
FACEBOOK_APP_ID=your_facebook_app_id

# Business rules
MAX_BOOKINGS_PER_DAY=10
MIN_ADVANCE_BOOKING_HOURS=2
MAX_ADVANCE_BOOKING_DAYS=30

# Performance settings
LAZY_LOADING_ENABLED=true
PAGINATION_PAGE_SIZE=20
IMAGE_CACHING_ENABLED=true

# =============================================================================
# NOTAS DE SEGURIDAD
# =============================================================================
# 1. Este archivo contiene información sensible - NUNCA compartirlo
# 2. Usar diferentes claves para desarrollo, staging y producción
# 3. Rotar las claves periódicamente
# 4. Monitorear el uso de las APIs para detectar abuso
